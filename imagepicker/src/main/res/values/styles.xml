<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Transparent.ImagePicker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.Theme.CustomBottomSheetDialog</item>
    </style>

    <style name="AppTheme.Theme.CustomBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.Widget.CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorBackgroundFloating</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
    </style>

    <style name="AppTheme.Widget.CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">
            @style/AppTheme.Theme.CustomShapeAppearanceBottomSheetDialog
        </item>
    </style>

    <style name="AppTheme.Theme.CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppTheme.Widget.Handle" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/shape_handle</item>
    </style>

    <style name="AppTheme.Text.BodyTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="AppTheme.Text.BodyNormal" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


</resources>