<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <size android:height="128dp" android:width="256dp"/>
            <solid android:color="@color/colorGreen" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_alarm"
        android:end="14dp"
        android:start="24dp"
        android:top="14dp"
        android:bottom="14dp"
        android:width="80dp"
        android:height="80dp"
        android:gravity="center_vertical"/>

    <item android:drawable="@drawable/ic_add_alert"
        android:end="24dp"
        android:start="14dp"
        android:top="14dp"
        android:bottom="14dp"
        android:width="80dp"
        android:height="80dp"
        android:gravity="end|center_vertical"/>

</layer-list>


