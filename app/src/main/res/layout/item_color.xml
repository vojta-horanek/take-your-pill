<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.content.Context" />

        <import type="android.view.View" />

        <variable
            name="color"
            type="eu.vojtechh.takeyourpill.model.PillColor" />

    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/color_dot_size_big"
        android:layout_height="@dimen/color_dot_size_big"
        android:layout_marginEnd="16dp"
        android:background="?attr/colorSurface"
        android:id="@+id/pillColorFrame">

        <View
            android:id="@+id/viewPillColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_oval"
            app:backgroundColorShaped="@{color.getColor(context)}"
            app:shapeAppearanceOverlay="@style/AppTheme.Shape.Oval" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            app:isVisible="@{color.checked}"
            app:srcCompat="@drawable/ic_check"
            app:tint="@android:color/white"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />
    </FrameLayout>
</layout>