<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.content.Context" />

        <import type="android.view.View" />

        <variable
            name="color"
            type="eu.vojtechh.takeyourpill.model.PillColor" />

        <variable
            name="listener"
            type="eu.vojtechh.takeyourpill.adapter.ColorAdapter.ColorAdapterListener" />

    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/color_dot_size_big"
        android:layout_height="@dimen/color_dot_size_big"
        android:layout_marginEnd="16dp"
        android:background="?attr/colorSurface"
        android:onClick="@{(view) -> listener.onColorClicked(view, color)}"
        android:clipChildren="false"
        android:clipToPadding="false">

        <View
            android:id="@+id/imagePillColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_oval"
            app:background_color_shaped="@{color.getColor(context)}"
            app:shapeAppearanceOverlay="@style/AppTheme.Shape.Oval"
            android:elevation="@{color.checked ? @dimen/elevation_color : 0 }" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:src="@drawable/ic_check"
            android:visibility="@{color.checked ? View.VISIBLE : View.GONE}"
            app:tint="@android:color/white"
            tools:visibility="visible"
            tools:ignore="ContentDescription"
            android:elevation="9dp" />
    </FrameLayout>
</layout>