<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.content.Context" />

        <variable
            name="history"
            type="eu.vojtechh.takeyourpill.model.History" />

        <variable
            name="listener"
            type="eu.vojtechh.takeyourpill.adapter.HistoryViewAdapter.ItemListener" />

        <variable
            name="position"
            type="java.lang.Integer" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minHeight="48dp">

        <View
            android:id="@+id/divider"
            style="@style/AppTheme.Widget.Divider"
            android:layout_width="0dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayoutConfirm"
            app:layout_goneMarginTop="0dp"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/jost_medium"
            android:textAppearance="@style/AppTheme.Text.BodyNormal"
            android:textSize="22sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="21. 12." />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/frameLayoutReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayoutConfirm"
            app:layout_constraintEnd_toEndOf="@+id/textHistoryReminded"
            app:layout_constraintStart_toStartOf="@+id/textHistoryReminded"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_notifications"
            tools:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textHistoryReminded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="48dp"
            android:textAppearance="@style/AppTheme.Text.BodyNormal"
            app:layout_constraintBottom_toBottomOf="@+id/textDate"
            app:layout_constraintEnd_toStartOf="@+id/textHistoryAmount"
            app:layout_constraintTop_toTopOf="@+id/textDate"
            tools:text="16:00" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/frameLayoutConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/textHistoryConfirmed"
            app:layout_constraintStart_toStartOf="@+id/textHistoryConfirmed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_check"
            tools:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textHistoryConfirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="48dp"
            android:textAppearance="@style/AppTheme.Text.BodyNormal"
            app:layout_constraintBottom_toBottomOf="@+id/textDate"
            app:layout_constraintEnd_toStartOf="@+id/textHistoryReminded"
            app:layout_constraintTop_toTopOf="@+id/textDate"
            tools:text="16:33" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/frameLayoutAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayoutReminder"
            app:layout_constraintEnd_toEndOf="@+id/textHistoryAmount"
            app:layout_constraintStart_toStartOf="@+id/textHistoryAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_pill"
            tools:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textHistoryAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="48dp"
            android:text="@{history.amount}"
            android:textAppearance="@style/AppTheme.Text.BodyNormal"
            app:layout_constraintBottom_toBottomOf="@+id/textDate"
            app:layout_constraintEnd_toStartOf="@+id/buttonShowMore"
            app:layout_constraintTop_toTopOf="@+id/textDate"
            tools:text="1" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/buttonShowMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{(view) -> listener.onItemOptionsClick(view, history, position)}"
            app:layout_constraintBottom_toBottomOf="@+id/textDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textDate"
            app:srcCompat="@drawable/ic_more" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>