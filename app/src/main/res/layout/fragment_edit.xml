<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pill"
            type="eu.vojtechh.takeyourpill.model.Pill" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/editView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/wrapperNewPill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="32dp">

                <TextView
                    android:id="@+id/textNewPill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:text="@string/new_pill"
                    android:textAppearance="@style/AppTheme.Text.Header4" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="@string/name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{pill.name}" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputDescriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/description">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{pill.description}" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/color"
                    android:textAppearance="@style/AppTheme.Text.BodyNormal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_color" />

                <TextView
                    android:id="@+id/textPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/photo"
                    android:textAppearance="@style/AppTheme.Text.BodyNormal" />

                <FrameLayout
                    android:id="@+id/layoutPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:focusable="true"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imagePillPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:elevation="4dp"
                        android:scaleType="centerCrop"
                        android:src="@{pill.photoDrawable(context)}"
                        app:shapeAppearanceOverlay="@style/AppTheme.Shape.Corners.Big"
                        tools:src="@drawable/photo_default"
                        android:foreground="?selectableItemBackground" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:elevation="5dp"
                        android:src="@drawable/ic_photo_add" />

                </FrameLayout>

                <TextView
                    android:id="@+id/textReminderTimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reminders"
                    android:textAppearance="@style/AppTheme.Text.BodyNormal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerReminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_reminder" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/add_reminder"
                    app:icon="@drawable/ic_add_alert" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkDayLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/limit_to_x_days" />

                <LinearLayout
                    android:id="@+id/groupLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputDayNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/number_of_days">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputDayNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="@{Integer.toString(pill.remindConstant.displayLimit)}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputCycleTodayLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/start_from_day">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputCycleToday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="@{Integer.toString(pill.remindCurrent.displayLimit)}" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkRestoreAfter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/restore_after" />

                <LinearLayout
                    android:id="@+id/groupRestore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputRestoreLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/how_many_days_to_restore">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputRestore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="@{Integer.toString(pill.remindConstant.displayBreak)}" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkCycleCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/cycle_forever" />

                <LinearLayout
                    android:id="@+id/groupCycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputCycleCountLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/num_of_cycles">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputCycleCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="@{Integer.toString(pill.remindConstant.displayRepeat)}" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionsBottomEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp"
                android:paddingBottom="8dp"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/buttonMoreInfo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorControlNormal"
                    app:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/textInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="8dp"
                        android:drawablePadding="4dp"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:text="@string/search_online"
                        android:textAppearance="@style/AppTheme.Text.ButtonSmall"
                        app:drawableTint="?attr/colorControlNormal"
                        app:drawableTopCompat="@drawable/ic_search" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/buttonSave"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorControlNormal"
                    app:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/textSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="8dp"
                        android:drawablePadding="4dp"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:text="@string/save"
                        android:textAppearance="@style/AppTheme.Text.ButtonSmall"
                        app:drawableTint="?attr/colorControlNormal"
                        app:drawableTopCompat="@drawable/ic_save" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
