<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.content.Context" />

        <variable
            name="pill"
            type="eu.vojtechh.takeyourpill.model.Pill" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/pill_details_transition_name">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/email_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textPillName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{pill.name}"
                    android:textAppearance="@style/AppTheme.Header3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Xyzal" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagePillColor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@{pill.colorDrawable(context)}"
                    android:elevation="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textPillName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textPillName"
                    app:shapeAppearanceOverlay="@style/AppTheme.Oval"
                    tools:background="?colorAccent" />

                <TextView
                    android:id="@+id/textPillDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{pill.description}"
                    android:textAppearance="@style/AppTheme.Description"
                    app:layout_constraintEnd_toEndOf="@+id/imagePillColor"
                    app:layout_constraintStart_toStartOf="@+id/textPillName"
                    app:layout_constraintTop_toBottomOf="@+id/textPillName"
                    tools:text="2 times a day, every 12 hours\nlast taken on Friday at 2:00 PM" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagePillPhoto"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="16dp"
                    android:elevation="8dp"
                    android:scaleType="centerCrop"
                    android:src="@{pill.photoDrawable(context)}"
                    android:visibility="@{pill.photoVisibility}"
                    app:layout_constraintEnd_toEndOf="@+id/textPillDescription"
                    app:layout_constraintStart_toStartOf="@+id/textPillDescription"
                    app:layout_constraintTop_toBottomOf="@+id/textPillDescription"
                    app:shapeAppearanceOverlay="@style/AppTheme.BigCorners"
                    tools:src="@drawable/ic_launcher_background" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonMoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/find_more_info"
                    android:textColor="?colorOnSecondary"
                    app:backgroundTint="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="@+id/textPillDescription"
                    app:layout_constraintTop_toBottomOf="@+id/imagePillPhoto"
                    app:shapeAppearanceOverlay="@style/AppTheme.Oval" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/edit"
            app:icon="@drawable/ic_edit"
            android:layout_gravity="bottom|end" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>