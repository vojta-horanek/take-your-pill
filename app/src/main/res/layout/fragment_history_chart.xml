<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chartsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/bottom_bar_height"
    android:transitionGroup="true"
    tools:context=".fragment.HistoryChartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/screen_margin_horizontal_small"
        android:paddingTop="@dimen/screen_margin_vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_chart_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/screen_margin_vertical"
            android:clipChildren="true"
            android:clipToPadding="false"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/standard_corner_radius"
            app:cardElevation="@dimen/standard_card_elevation"
            app:cardMaxElevation="@dimen/max_card_elevation"
            app:cardPreventCornerOverlap="true"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/titleGraphAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_pills_chart"
                    android:textAppearance="@style/AppTheme.Text.Overline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartAll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginTop="@dimen/screen_margin_vertical_little"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleGraphAll" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_chart_missed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/screen_margin_vertical"
            android:clipChildren="true"
            android:clipToPadding="false"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/standard_corner_radius"
            app:cardElevation="@dimen/standard_card_elevation"
            app:cardMaxElevation="@dimen/max_card_elevation"
            app:cardPreventCornerOverlap="true"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/titleGraphMissed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/missed_pills"
                    android:textAppearance="@style/AppTheme.Text.Overline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartMissed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginTop="@dimen/screen_margin_vertical_little"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleGraphMissed" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_chart_all_missed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/screen_margin_vertical"
            android:clipChildren="true"
            android:clipToPadding="false"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/standard_corner_radius"
            app:cardElevation="@dimen/standard_card_elevation"
            app:cardMaxElevation="@dimen/max_card_elevation"
            app:cardPreventCornerOverlap="true"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/titleGraphAllMissed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/confirmed_missed_pills"
                    android:textAppearance="@style/AppTheme.Text.Overline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartAllConfirmed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginTop="@dimen/screen_margin_vertical_little"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleGraphAllMissed" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
