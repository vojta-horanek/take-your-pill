<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="BaseStyle">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BaseStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorSurface</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.Theme.CustomBottomSheetDialog</item>
    </style>

    <color name="colorDivider">#1f000000</color>

    <style name="AppTheme.Theme.CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.Widget.CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="AppTheme.Widget.CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">
            @style/AppTheme.Theme.CustomShapeAppearanceBottomSheetDialog
        </item>
    </style>

    <style name="AppTheme.Theme.CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppTheme.Shape.RoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">4dp</item>
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="AppTheme.Shape.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.Shape.RoundedCornersConfirmCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>


    <style name="AppTheme.Text.Header4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="AppTheme.Text.Header3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="AppTheme.Text.ButtonSmall" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.Text.BodyNormal" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AppTheme.Text.BodySecondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="AppTheme.Text.BodyTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="AppTheme.Text.BodyTitleSmall" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="AppTheme.Text.Header6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AppTheme.Text.Description" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="AppTheme.Shape.Oval" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="background">?attr/colorSurface</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.Shape.Corners.Big" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppTheme.Widgets.FloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="shapeAppearanceOverlay">@style/AppTheme.Widgets.FabRoundedShape</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTheme.Widgets.FabRoundedShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppTheme.Widgets.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/AppTheme.Text.BottomNavigationLabels</item>
        <item name="itemTextAppearanceInactive">@style/AppTheme.Text.BottomNavigationLabels</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="AppTheme.Text.BottomNavigationLabels" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="AppTheme.Widget.Handle" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/shape_handle</item>
    </style>

    <style name="AppTheme.Widget.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="AppTheme.Widget.Header" parent="">
        <item name="android:layout_marginTop">@dimen/appbar_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/appbar_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/appbar_margin_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Header4</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>