<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="BaseStyle">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BaseStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorSurface</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppTheme.Header4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="AppTheme.Header3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="PillsHeader6" parent="TextAppearance.MaterialComponents.Headline6"></style>

    <style name="AppTheme.Description" parent="TextAppearance.MaterialComponents.Subtitle1"></style>

    <style name="AppTheme.Oval">
        <item name="cornerSize">50%</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.BigCorners">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="shapeAppearanceOverlay">@style/FabRoundedShape</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="FabRoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/AllCapsText</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="AllCapsText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

</resources>